# certbot
server {
    listen [::]:80;
    listen 80;
    server_name ${STRAPI_DOMAIN} ${WEB_DOMAIN} ${JENKINS_DOMAIN};
    server_tokens   off;
    
    root /var/www/certbot;
    
    location ^~ /.well-known/acme-challenge {
        try_files $uri $uri/ =404;
    }

    # redirect
    location / {
        return 301 https://$host$request_uri;
    }
} 
